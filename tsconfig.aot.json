{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "removeComments": true,
    "experimentalDecorators": true,
    "noImplicitAny": false,
    "declaration": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "typeRoots": [
      "node_modules/@types"
    ],
    "types": [
      "node",
      "jasmine"
    ]
  },
  "exclude": [
    "bower",
    "node_modules"
  ],
  "files": [
    "./src/main.ts"
  ],
  "angularCompilerOptions": {
    "strictMetadataEmit": true,
    "skipTemplateCodegen": true
  },
  "typings": [
    "./src/typings.d.ts"
  ]
}
